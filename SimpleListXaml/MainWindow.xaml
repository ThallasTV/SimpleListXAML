<Window x:Class="SimpleListXaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To-Do List" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="To-Do List" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="TaskListBox" Height="150" />

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBox x:Name="TaskInput" Width="250" />
                <Button Content="Add" Width="50" Margin="10,0,0,0" Click="AddTask_Click"/>
            </StackPanel>

            <Button Content="Remove Selected" Width="150" Margin="0,10,0,0" Click="RemoveTask_Click"/>
        </StackPanel>
    </Grid>
</Window>
